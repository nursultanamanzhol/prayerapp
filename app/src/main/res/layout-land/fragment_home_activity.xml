    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_gravity="bottom"
        android:background="@drawable/homebg"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <ImageView
            android:id="@+id/qosymsha"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qosymsha"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/Qosymsha"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttons"
            android:text="Qosymsha"
            android:textColor="#EFEEED"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_gravity="bottom"
        android:background="@drawable/homebg"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ttext"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zikir"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/Zikir"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttons"
            android:text="ZIKIR"
            android:textColor="#EFEEED"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_gravity="bottom"
        android:background="@drawable/homebg"
        android:gravity="bottom"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/taryh"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/todo"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quranicon"
            app:layout_constraintBottom_toTopOf="@+id/QuranBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/QuranBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttons"
            android:text="@string/quran"
            android:textColor="#EFEEED"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taryh"
            tools:ignore="TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="150dp"
        android:layout_height="136dp"
        android:layout_gravity="bottom"
        android:background="@drawable/homebg"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/history"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/history"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/TatihBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttons"
            android:text="Пайғамбарлар тарихы"
            android:textColor="#EFEEED"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>